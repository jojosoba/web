---
import SideMenuItem from "./SideMenuItem.astro";
import { sidebarPlaylists } from "../../lib/data";
import SideItemCard from "./SideItemCard.astro";
import StoryCard from "../StoryCard.astro";
import { getCollection } from "astro:content";
const storyEntries = await getCollection("stories");
---

<div class="flex flex-col flex-1 gap-2">
  <div class="bg-zinc-900 rounded-lg">
    <ul>
      <SideMenuItem href="/shop" iconName="carbon:store">Shop</SideMenuItem>
      <SideMenuItem href="/story" iconName="mdi:heart-outline">
        Story
      </SideMenuItem>
      <SideMenuItem href="/menu" iconName="carbon:book">Menu</SideMenuItem>
      <SideMenuItem href="/lab" floor={3} iconName="tabler:flask-2">
        Lab
      </SideMenuItem>
      <SideMenuItem href="/cafe" floor={2} iconName="tabler:coffee">
        Cafe
      </SideMenuItem>
      <SideMenuItem href="/" floor={1} iconName="tabler:home">
        Home
      </SideMenuItem>
    </ul>
  </div>

  <div class="bg-zinc-900 rounded-lg flex-1">
    <ul>
      <SideMenuItem href="#" iconName="ic:round-chat">Blogs</SideMenuItem>
    </ul>
    <ul class="pl-2">
      {storyEntries.map((story) => <SideItemCard playlist={story.data} />)}
    </ul>
  </div>
</div>
