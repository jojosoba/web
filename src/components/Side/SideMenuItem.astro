---
import Icon from "astro-icon";

type Props = {
  href?: string;
  iconName?: string;
  floor?: number;
};

const { href, iconName, floor } = Astro.props;
---

<li>
  <a
    {href}
    class="flex gap-4 text-zinc-400 hover:text-zinc-100 py-3.5 px-5 font-semibold transition-all duration-300"
  >
    <Icon name={iconName} class="h-6 w-6" />
    <slot />
    {
      floor ? (
        <div class="ml-auto -rotate-3 bg-secondary-500 px-2 rounded-md text-white">
          FLR {floor}
        </div>
      ) : null
    }
  </a>
</li>
